<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Агенство недвижимости № 1</title>
    <link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="css/swiper.min.css">
    <link rel="stylesheet" href="font/fontawesome/all.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
</head>
<body>

	<div class="auth">
       <h2>Авторизация</h2>
        <form action="index.lgs" method = "POST" class="grid__auth">
            <input type="text" name="l_login" placeholder="Логин">
            <input type="password" name="l_password" placeholder="Пароль">
            <input type="submit" name="l_button" value="Ok">
            <button class="auth-btn-close-shadow">Отмена</button>
        </form>
    </div> 

<#
	if(!is_null(_post["l_button"]))
		text = "SELECT * FROM users WHERE login = '" + _post["l_login"] + "' AND BINARY pass = '" + _post["l_password"] + "' LIMIT 1"
		result = query(connection, text)
		if(len(result) == 0)
			write("<script>alert('Неверный логин или пароль!')</script>")
		else			
			local_user_info["name"] 	= result[0]["name"]
			local_user_info["surname"] 	= result[0]["surname"]
			local_user_info["access"] 	= result[0]["access"]
			local_user_info["id"] 		= result[0]["idUsers"]

	text = null
    header = null

    text += "<a href='index.lgs'>Главная</a>"
    text += "<a href='ads.lgs'>Объявления</a>"
    text += "<a href='help.lgs'>Помощь</a>"

	if(is_null(local_user_info))
        header += "<div class='header'>"
		text += "<a href='#' onclick='showModalWin()'>Войти</a>"
	else
        header += "<div class='header_authorized'>"
        text += "<a href='admin.lgs'>Администрирование</a>"
        text += "<p>" + local_user_info["surname"] + " " + local_user_info["name"] + "<a href='/index.lgs?exit=1'>Выйти</a></p>"

    text += "</div>"
    header += text
    write(header)
#>