        text = "SELECT * FROM realty WHERE"
        text += " price = '" + double(search_text) + "'"
        text += "OR floor = '" + int(search_text) + "'"
        text += "OR number_of_rooms = '" + int(search_text) + "'"
        text += "OR address LIKE LOWER('" + "%" + search_text + "%" + "')"
        del(realty_array)
