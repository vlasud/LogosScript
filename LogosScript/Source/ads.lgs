            if(!flag)
                text += " WHERE"
            text += " price >= '" + double(_post["price_ot"]) + "'"
            flag = true
        if(_post["price_do"] != "")
            if(flag)
                text += " AND"
            else 
                text += " WHERE"
            text += " price <= '" + double(_post["price_do"]) + "'"
            flag = true
        if(_post["floor"] != "")
            if(flag)
                text += " AND"
            else 
                text += " WHERE"
            text += " floor = " + int(_post["floor"])
            flag = true
        if(_post["number_of_rooms"] != "")
            if(flag)
                text += " AND"
            else 
                text += " WHERE"
            text += " number_of_rooms = " + int(_post["number_of_rooms"])
            flag = true
        if(_post["address"] != "")
            if(flag)
                text += " AND"
            else 
                text += " WHERE"
            text += " address LIKE LOWER('" + "%" + _post["address"] + "%" + "')"
            flag = true

        del(realty_array)
        realty_array = query(connection, text)

