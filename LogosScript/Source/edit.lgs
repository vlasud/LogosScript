<#
    if(!is_null(_post["u_edit_button"]))
        if(!is_null(_get["id_Client"]))
            request = null
            request = "UPDATE users SET name='" + _post["u_name"] + "'"
            request += ",surname='" + _post["u_surname"] + "'"
            request += ",phone_number='" + _post["u_phone_number"] + "'"
            request += ",login='" + _post["u_login"] + "'"
            request += ",pass='" + _post["u_password"] + "'"
            request += ",access='" + _post["u_access"] + "'"
            request += " WHERE idUsers = " + _get["id_Client"]
        elif(!is_null(_get["id_Realty"]))
            request = null
            request = "UPDATE realty SET name='" + _post["u_name"] + "'"
            request += ",phone_number='" + _post["u_phone_number"] + "'"
            request += ",number_of_rooms='" + _post["u_rooms"] + "'"
            request += ",floor='" + _post["u_floor"] + "'"
            request += ",address='" + _post["u_address"] + "'"
            request += ",price='" + _post["u_price"] + "'"
            request += " WHERE idRealty = " + _get["id_Realty"]
        query(connection, request)
        redirect("/index.lgs")

    if(!is_null(_get["id_Client"]) && is_null(_get["id_Realty"]))
        result = query(connection, "SELECT * FROM users WHERE idUsers = '" + _get["id_Client"] + "' LIMIT 1")

        text = null
        text += "<div class='editPersonPage'>"
