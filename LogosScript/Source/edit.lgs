        text += "<input name = 'u_address' type='text' placeholder='Адрес' value='" + result[0]["address"] + "'>"
        text += "<input name = 'u_price' type='number' placeholder='Цена' value='" + result[0]["price"] + "'>"
        text += "<input name = 'u_edit_button' type='submit' value='Подтвердить'>"
