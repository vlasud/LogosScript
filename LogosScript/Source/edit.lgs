        text += "<input name = 'u_surname' type='text' placeholder='Фамилия' value='" + result[0]["surname"] + "'>"
        text += "<input name = 'u_phone_number'  type='tel' placeholder='Номер телефона' value='" + result[0]["phone_number"] + "'>"
        text += "<input name = 'u_login'  type='text' placeholder='Логин' value='" + result[0]["login"] + "'>"
        text += "<input name = 'u_password' type='password' placeholder='Пароль' value='" + result[0]["pass"] + "'>"
        text += "<input name = 'u_access' type='number' placeholder='Уровень доступа' value='" + result[0]["access"] + "'>"
        text += "<input name = 'u_edit_button' type='submit' value='Подтвердить'>"
        text += "<p>Уровень доступа: 1 - Администратор, 2 - обычный работник</p>"
        text += "</form>"        
        text += "</div>"
        write(text)
    elif(!is_null(_get["id_Realty"]))
        result = query(connection, "SELECT * FROM realty WHERE idRealty = '" + _get["id_Realty"] + "' LIMIT 1")

        text = null
